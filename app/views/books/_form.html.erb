  <%= f.text_field :genre_name, class: "form-input", placeholder: "Genre name", required: true %><br>
  <%= f.text_field :release_year, class: "form-input", placeholder: "Release year", required: true %><br>
  
  <%= f.submit class: "btn" %>
<% end %>
