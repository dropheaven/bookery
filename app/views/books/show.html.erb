<div class="row book-show">
  <div id="show-img" class="col-sm-2">
    <%= image_tag "books/book-4.jpg", size: "200x300", class: "rounded float-left", alt: "hunter-newton" %>
  </div>
  <div id ="book-info" class="col-sm-10">
    <h2><%= @book.title %></h2>
    <h5>by <%= titleize(@book.author) %></h5>
    <p>
      Genre: <%= @book.genre.name %><br>
      Release date: <%= @book.release_year %>
    </p>
    <%= link_to "Edit", edit_author_book_path(@book.author, @book), class: 'btn btn-primary' %>
    <%= link_to "Delete", @book, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>
 
<%= render 'comments' %>


