<%= form_for :session, url: login_path, html: { class: "text-center border border-light p-5" } do |f| %>
  <p class="h4 mb-4">Sign in</p>

  <%= f.text_field :username, class: "form-control mb-4", placeholder: "Username" %>
  <%= f.password_field :password, class: "form-control mb-4", placeholder: "Password" %>
  <%= f.submit "Sign in", class: "btn btn-info btn-block my-4" %>

  <p>Not a member? <%= link_to "Register", new_user_path %></p>

  <p>or sign in with: </p>
  <a type="button" class="light-blue-text mx-2">
    <i class="fab fa-github"></i>
  </a>
<% end %>


