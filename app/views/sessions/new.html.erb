<div class="d-flex justify-content-center">
  <%= form_for :session, html: { class: "w-50" }, url: login_path do |f| %>
    <h1 class="display-4">Sign in</h2>

    <div class="form-group">
      <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <%= f.submit "Sign in", class: "btn btn-primary" %>

    <h6 class="form-alt">or sign in with: <%= link_to "Github", "/auth/github" %></h4>
    <h6 class="form-alt">Not a member? <%= link_to "Register", new_user_path %></h4>
  <% end %>
</div>
  