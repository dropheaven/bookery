<h3>Log in</h3>

<%= form_for :session, url: login_path do |f| %>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div class="action">
    <%= f.submit "Login" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>