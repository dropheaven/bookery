<%= form_for @user, html: { class: "border border-light p-5" } do |f| %>
  <p class="h4 mb-4 text-center">Sign up</p>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :username, class: "form-control md-4", placeholder: "Username" %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, class: "form-control md-4", placeholder: "Email" %>
  </div>
  <div class="form-group">
   <%= f.password_field :password, class: "form-control md-4", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control md-4", placeholder: "Confirm Password" %>
  </div> 

  <%= f.submit "Sign up", class: "btn btn-info btn-block my-4" %>

  <p>Have an account? <%= link_to "sign in", login_path %></p>
<% end %>